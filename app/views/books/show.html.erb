<div class="container">
    <div class="row">
        <%= render 'users/list', user: @user,book: @book %>
        <div class="col-xs-9">
        <h2>Book detail</h2>
        <table class="table table-hover table-inverse">
            <tbody>
                <tr>
                    <th><%= attachment_image_tag @books.user, :profile_image, :fill, 60,60 %>
                    <td><%= @books.title %></td>
                    <td><%= @books.body %></td>
                    <% if @books.user_id == current_user.id %>
                        <td><%= link_to "編集", edit_book_path(@books),class:"btn-sm btn-success edit_book_19082" %>
                        <th><%= link_to "削除", book_path(@books),method: :delete,class:"btn-sm btn-danger destroy_book_19082", "data-confirm" => "本当に削除しますか？"%>
                    <% end %>
                </tr>
            </tbody>
        </table>
        </div>
    </div>
</div>