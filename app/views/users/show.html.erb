<div class="container">
    <div class="row">
        <div class="col-xs-3">
            <h2>User info</h2>
            <%= attachment_image_tag @user, :profile_image, :fill, 100,100, format: "jpeg",fallback: "no_image.jpg" %>
            <table class="table">
                <tbody>
                    <tr>
                        <th>Name</th>
                        <th><%= @user.name %></th>
                    </tr>
                    <tr>
                        <th>Introduction</th>
                        <th><%= @user.introduction %></th>
                    </tr>
                </tbody>
            </table>
            <div class="row">
                <% if @user.id == current_user.id %>
                    <%= link_to "", edit_user_path(@user),class:"col-xs-12 btn btn-default glyphicon glyphicon-wrench edit_user_11603" %>
                 <% end %>
            </div>
        </div>
        <div class="col-xg-9">

        </div>
    </div>
</div>